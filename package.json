{
	"name": "linode-v4",
	"version": "0.0.0-development",
	"description": "Linode v4 alpha API client",
	"main": "index.js",
	"typings": "index.d.ts",
	"scripts": {
		"cover": "nyc npm t",

		"codeclimate:report": "codeclimate-test-reporter < coverage/lcov.info",
		"semantic-release": "semantic-release",

		"docs": "cross-env DOCS=true mocha test/index.ts",

		"test": "mocha test/index.ts",
		"posttest": "npm run docs",

		"test:live": "mocha test/index.ts --watch --recursive --watch-extensions ts",
		"build": "tsc"
	},
	"engines": {
		"node": ">= 8.7.0",
		"vscode": "*"
	},
	"author": "Gerardo Pérez Pérez (gerard2perez@outlook.com)",
	"license": "MIT",
	"dependencies": {
		"node-rest-client": "^3.1.0"
	},
	"files": [
		"*.js",
		"*.d.ts",
		"README.md",
		"LICENSE"
	],
	"devDependencies": {
		"@types/chai": "^4.1.2",
		"@types/mocha": "^5.0.0",
		"@types/node": "^9.6.2",
		"chai": "^4.1.2",
		"mocha": "^5.0.5",
		"mocha-typescript": "^1.1.12",
		"nyc": "^11.6.0",
		"ts-node": "^5.0.1",
		"typescript": "^2.8.1"
	},
	"nyc": {
		"lines": 99,
		"statements": 99,
		"functions": 99,
		"branches": 99,
		"reporter": [
			"lcov",
			"text"
		],
		"include": [
			"src/**/*.ts"
		],
		"extension": [
			".ts"
		],
		"sourceMap": true,
		"instrument": true,
		"cache": true,
		"check-coverage": true,
		"all": false,
		"report-dir": "./coverage"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/gerard2p/linode-v4.git"
	}
}
